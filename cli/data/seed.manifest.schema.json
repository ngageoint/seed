{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "manifestVersion": {
            "type": "string",
            "pattern": "0.0.3"
        },
        "job": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "[a-z0-9_-]+"
                },
                "algorithmVersion": {
                    "type": "string",
                    "pattern": "(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)(-(0|[1-9][0-9]*|[0-9]*[a-zA-Z-][0-9a-zA-Z-]*)(\\.(0|[1-9][0-9]*|[0-9]*[a-zA-Z-][0-9a-zA-Z-]*))*)?(\\+[0-9a-zA-Z-]+(\\.[0-9a-zA-Z-]+)*)?"
                },
                "packageVersion": {
                    "type": "string",
                    "pattern": "(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)(-(0|[1-9][0-9]*|[0-9]*[a-zA-Z-][0-9a-zA-Z-]*)(\\.(0|[1-9][0-9]*|[0-9]*[a-zA-Z-][0-9a-zA-Z-]*))*)?(\\+[0-9a-zA-Z-]+(\\.[0-9a-zA-Z-]+)*)?"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "tag": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "authorName": {
                    "type": "string"
                },
                "authorEmail": {
                    "type": "string"
                },
                "authorUrl": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer"
                },
                "cpus": {
                    "type": "number"
                },
                "mem": {
                    "type": "number"
                },
                "sharedMem": {
                    "type": "number",
                    "default": 0.0
                },
                "storage": {
                    "type": "number",
                    "default": 0.0
                },
                "interface": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "args": {
                            "type": "string"
                        },
                        "inputData": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "files": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "required": {
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "mediaType": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "mediaType"
                                        ]
                                    }
                                },
                                "json": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "required": {
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "type": {
                                                "type": "string",
                                                "enum": [
                                                    "array",
                                                    "boolean",
                                                    "integer",
                                                    "number",
                                                    "object",
                                                    "string"
                                                ]
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "type"
                                        ]
                                    }
                                }
                            }
                        },
                        "outputData": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "files": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "mediaType": {
                                                "type": "string"
                                            },
                                            "pattern": {
                                                "type": "string"
                                            },
                                            "count": {
                                                "type": "string",
                                                "default": "1",
                                                "pattern": "([0-9]+|\\*)"
                                            },
                                            "required": {
                                                "type": "boolean",
                                                "default": true
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "mediaType",
                                            "pattern"
                                        ]
                                    }
                                },
                                "json": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "key": {
                                                "type": "string"
                                            },
                                            "type": {
                                                "type": "string",
                                                "enum": [
                                                    "array",
                                                    "boolean",
                                                    "integer",
                                                    "number",
                                                    "object",
                                                    "string"
                                                ]
                                            },
                                            "required": {
                                                "type": "boolean",
                                                "default": true
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "type"
                                        ]
                                    }
                                }
                            }
                        },
                        "envVars": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "value"
                                ]
                            }
                        },
                        "mounts": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "path": {
                                        "type": "string"
                                    },
                                    "mode": {
                                        "enum": [
                                            "ro",
                                            "rw"
                                        ],
                                        "default": "ro"
                                    }
                                },
                                "required": [
                                    "name",
                                    "path"
                                ]
                            }
                        },
                        "settings": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "secret": {
                                        "type": "boolean",
                                        "default": false
                                    }
                                },
                                "required": [
                                    "name"
                                ]
                            }
                        }
                    },
                    "required": [
                    ]
                },
                "errorMapping": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "code": {
                                "type": "integer"
                            },
                            "title": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "category": {
                                "type": "string",
                                "default": "algorithm",
                                "enum": [
                                    "algorithm",
                                    "data",
                                    "system"
                                ]
                            }
                        },
                        "required": [
                            "code",
                            "title"
                        ]
                    }
                }
            },
            "required": [
                "name",
                "algorithmVersion",
                "packageVersion",
                "title",
                "description",
                "authorName",
                "timeout",
                "cpus",
                "mem",
                "interface"
            ]
        }
    },
    "required": [
        "manifestVersion",
        "job"
    ]
}
